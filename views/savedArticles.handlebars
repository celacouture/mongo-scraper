<header class="header">
  <h1>The New York Times</h1>
  <h3>Food</h3>
  <h2>Web-Scraper</h2>
</header>
<div class="container">
  <nav class="nav nav-pills nav-justified">
    <form action="/scrape" method="POST" class="navbar-form">
    <button type="submit" class="btn btn-default">SCRAPE NEW ARTICLES!</button>
    </form>
    <a class="nav-item nav-link" href="/">Home</a>
    <a class="nav-item nav-link" href="/savedarticles">Saved Articles</a>
  </nav>
</div>

<div class="container">

  <div class="displayFrame">
    {{#each articles}}
    <div class="col-12 scrapedArticle">

    <div class="row">
      <div class="card">
  <div class="row">
    <div class="col-12">
      <div class="card-header">
        <h3 class="card-title headline">{{this.title}}</h3>

      </div>
    </div>
  </div>

  <div class="card-body">
    <div class="row">
      <div class="col-12">
        <p class="card-text summary">{{this.summary}}</p>
      </div>
      <div class="col-12">
          <link><h6 class="card-text url-link">{{this.link}}</h6></link>
      </div>
    </div>
    <div class="row">
      <div class="col-6">
              <form action="/delete"{{this.id}}?_method=DELETE method="POST">
                <button type="submit" class="btn btn-primary">DELETE ARTICLE</button>
              </form>
      </div>
      <div class="col-6">
        <button id="modalbutton" type="submit" class="btn btn-default pull-right" data-toggle="modal" data-id={{this.id}} data-target="#myModal">ARTICLE NOTES</button>
      </div>
    </div>
  </div>
</div>
      </div>
    </div>
    {{/each}}

</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Notes for Article <span id="articleID"></span></h4>
      </div>
      <div class="modal-body">
        <div id="notes"></div>
      </div>
    </div>
  </div>
</div>
